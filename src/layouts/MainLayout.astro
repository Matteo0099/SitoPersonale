---
// component import
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

// style import
import "../styles/global.css";

const {
  title = "My Astro Blog",
  description = "My musings about the Astro framework",
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<script>
  import "../js/DarkMode";
</script>

<html lang="en">
  <MainHead {title} {description} {image} {frontmatter} {robots} />
  <body class="body-primary">
    <Nav />
    <main>
      <slot>Default</slot>
    </main>
    <Footer />
    <!-- aos animation -->
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init();
    </script>
  </body>
</html>
