---
// component imports
import MainLayout from "../layouts/MainLayout.astro";
import PostCard from "../components/PostCard.astro";
import Link from "../components/Link.astro";
import Shop from "../components/Shop.astro";
import Form from "../components/Form.astro";

// utils imports
import { formatBlogPosts } from "../js/utils";

const allPosts = await Astro.glob("./blog/*.md");
const formattedPosts = formatBlogPosts(allPosts, {
  limit: 3,
});
---

<MainLayout title="Matteo ManiÃ  Blog">
  <section class="container about mx-auto" aria-label="About Me">
    <img
      src="/images/headshot.webp"
      alt="My headshot"
      width="200"
      height="330"
      data-aos="zoom-in"
      data-aos-delay="150"
      data-aos-duration="300"
    />
    <div class="content">
      <h1
        class="h1 fancyH1"
        data-aos="zoom-in"
        data-aos-delay="300"
        data-aos-duration="300"
        data-value="My Blog"
      >
        My Blog
      </h1>
      <p data-aos="zoom-in" data-aos-delay="500" data-aos-duration="300">
        You can find something interesting in this blog.
      </p>
      <Link
        href="/about/"
        style="secondary"
        text="ðŸ‘‹ About Me"
        data-aos="zoom-in"
        data-aos-delay="650"
        data-aos-duration="300"
      />
    </div>
  </section>

  <section class="container mx-auto" aria-label="New Blog Posts">
    <h1
      class="h1 h1-blog"
      data-aos="fade-up"
      data-aos-anchor-placement="bottom-bottom"
      data-aos-duration="350"
      data-aos-delay="750"
      data-aos-easing="cubic"
      data-value="New Blog Posts"
    >
      New Blog Posts
    </h1>
    <div
      class="post-container"
      data-aos="fade-zoom-in"
      data-aos-easing="ease-in-back"
      data-aos-delay="300"
      data-aos-offset="0"
    >
      {
        formattedPosts.map((post) => (
          <PostCard
            frontmatter={post.frontmatter}
            url={post.url}
            tagType="h3"
          />
        ))
      }
    </div>
  </section>

  <section class="container mx-auto" aria-label="My Services">
    <div class="flexx">
      <h2
        class="h1 h1-shop"
        data-aos="fade-up"
        data-aos-anchor-placement="bottom-bottom"
        data-aos-duration="350"
        data-aos-delay="750"
        data-aos-easing="cubic"
      >
        Build a site for you!
      </h2>
      <svg class="builder-svg"></svg>
    </div>
    <h2 class="h1 h1-shop pricing">Pricing: </h2>
    <!-- the cards -->
    <Shop />
  </section>

  <section class="container mx-auto" aria-label="Contact me!">
    <h2
      class="h1 h1-shop aos-init aos-animate"
      data-aos="fade-up"
      data-aos-anchor-placement="bottom-bottom"
      data-aos-duration="350"
      data-aos-delay="750"
      data-aos-easing="cubic"
    >
      Contact me!
    </h2>
    <div class="container-flex">
      <svg class="Mentor-uiux"></svg>
      <Form />
    </div>
  </section>
</MainLayout>
